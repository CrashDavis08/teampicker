result-view {
	match: Team (teams)
	message("Here's today's matchup!")
  
	render {
		layout {
			section {
				content {
					hbox {
						content {
							vbox {
								grow (3)
								content {
									single-line {
										image {
                      shape (Circle)
											url (/images/Heroes.jpg)
                      style (Title_XXL)
										}
									}
								}
							}
							vbox {
                valign (Bottom)
								grow (2)
								content {
									single-line {
                    image {
                      url (/images/Versus3.jpg)
                      style (Title_S)
                    }
										// text {
										// 	value ("vs.")
										// 	style (Title_L)
										// }
									}
								}
							}
							vbox {
								grow (3)
								content {
									single-line {
										image {
                      shape (Circle)
											url (/images/Legends.jpg)
                      style (Title_XXL)
										}
									}
								}
							}
						} 
					}
					
					hbox {
						content {
							vbox {
                grow (3)
								content {
									for-each (players){
										as (player){
											single-line {
												text {
													value ("#{value(teams[0].players[i].playerName)}")
                          style (Title_M)
												}
											}
										}
									}
								}
							}
              vbox {
                grow (2)
                content {
                  single-line {
                    spacer
                  }
                }
              }
              vbox {
                grow (3)
								content {
									for-each (players){
										as (player){
											single-line {
												text {
													value ("#{value(teams[1].players[i].playerName)}")
                          style (Title_M)
												}
											}
										}
									}
								}
							}
						}
					}
          hbox {
            content {
              vbox {
                content {
                  text {
                    value ("#{size(teams[0])} players (#{integer(teams[0].teamImpact)})")
                    style (Detail_L_Soft)
                  }
                }
              }
              vbox {
                content {
                  text {
                    value ("#{size(teams[1])} players (#{integer(teams[1].teamImpact)})")
                    style (Detail_L_Soft)
                  }
                }
              }
            }
          }
				}
			}
		}
	}
}